rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Public access for newsletter subscriptions
    match /subscribers/{subscriberId} {
      allow read: if false; // Only admin can read subscribers
      allow create: if true; // Anyone can subscribe
      allow update, delete: if false; // No public updates or deletions
    }
    
    // Public access for published newsletters
    match /newsletters/{newsletterId} {
      allow read: if resource.data.status == 'published';
      allow write: if false; // Only admin can write
    }
    
    // Admin access to all collections
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}